{
    "$schema": "./tasks_fe/tests/node_modules/@biomejs/biome/configuration_schema.json",
    "files": {
        "include": ["**/*.js", "**/*.html", "**/*.css", "**/*.json"],
        "ignore": ["**/dist/**", "**/playwright-report/**"]
    },
    "organizeImports": {
        "enabled": false
    },
    "linter": {
        "enabled": true,
        "rules": {
            "all": true,
            "nursery": {
                "all": true,
                "useImportRestrictions": "off",
                "noNodejsModules": "off"
            },
            "suspicious": {
                "all": true,
                "noEmptyBlockStatements": "off"
            }
        }
    },
    "overrides": [{
        "include": ["tests/**"],
        "linter": {
            "rules": {
                "nursery": {
                    "noConsole": "off"
                },
                "style": {
                    "noDefaultExport": "off",
                    "useNamingConvention": "off"
                }
            }
        }
    }],
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "lineWidth": 120,
        "indentWidth": 4
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "bracketSpacing": true
        }
    },
    "css": {
        "formatter": {
            "enabled": true
        }
    }
}
