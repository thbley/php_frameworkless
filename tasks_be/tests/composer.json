{
    "name": "thomasbley/example_tasks_php",
    "description": "PHP Tasks REST API",
    "license": "MIT",
    "config": {
        "platform": {
            "php": "8.1"
        },
        "vendor-dir": "vendor",
        "optimize-autoloader" : true,
        "classmap-authoritative" : true,
        "notify-on-install": false,
        "allow-plugins": false,
        "cache-read-only": true
    },
    "require": {
        "php": ">=8.1",
        "ext-mbstring": "*",
        "ext-curl": "*",
        "ext-openssl": "*",
        "ext-pdo_mysql": "*",
        "ext-pdo_pgsql": "*",
        "ext-pdo": "*",
        "ext-redis": "*",
        "ext-json": "*",
        "ext-hash": "*",
        "ext-zlib": "*",
        "ext-spl": "*",
        "ext-filter": "*",
        "ext-pcre": "*",
        "ext-zend-opcache": "*",
        "justinrainbow/json-schema": "^5",
        "php-cs-fixer/shim": "^3",
        "phpstan/phpstan": "^1",
        "rector/rector": "^1",
        "phpmd/phpmd": "^2",
        "vimeo/psalm": "^5",
        "phpunit/phpunit": "^10",
        "ergebnis/phpunit-slow-test-detector": "^2",
        "phpstan/phpstan-deprecation-rules": "^1",
        "phpstan/phpstan-phpunit": "^1"
    },
    "replace": {
        "symfony/polyfill-mbstring": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*",
        "symfony/polyfill-php83": "*"
    },
    "autoload": {
        "psr-4": {
            "TaskService\\": "unit/",
            "TaskService\\Tests\\": "./",
            "TaskService\\Tests\\Feature\\": "feature/",
            "TaskService\\Tests\\Integration\\": "integration/",
            "TaskService\\Tests\\Performance\\": "performance/",
            "TaskService\\Tests\\Unit\\": "unit/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable" : true
}
